<!doctype html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="/image/desk-chair.png"/>
    <title>Dashboard | Student </title>
</head>

<body style="background: url(/image/studentDashboard.jpg);background-size: cover; background-repeat: no-repeat;">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#" style="margin-left: 25px; font-weight: bold;">Classroom</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle Navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 ">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-dark shadow-none" data-bs-toggle="modal" data-bs-target="#exampleModal" style="margin: 0 20px 0 20px; font-weight: 700;"> Join Class
                </button>
                
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel" style="font-weight: bold; font-size: 25px;">Enter Class Code</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form action="/joinclassroom" method="POST">
                            <div class="modal-body" style="font-weight: bold; font-family: Georgia, 'Times New Roman', Times, serif; margin-left: 15px; ">
                                Code : &nbsp;&nbsp;<input name="classroomId" style="width: 75%; border-radius: 10px; outline: none;" type="text"><br>
                            </div>
                            <button type="submit" style="margin-bottom: 15px; padding-left: 100px; padding-right: 100px; margin-left: 135px; margin-top: 25px; font-weight: 800px;"  class="btn btn-primary shadow-none">Join</button>
                            </form>
                            </div>
                    </div>
                </div>
                <form action="\logout" method="POST">
               <button type="submit" class="btn btn-danger shadow-none" style="margin: 0 20px 0 10px; font-weight: 700;"> Sign out
                </button>
                </form>
            </ul>
        </div>
    </nav>
    <br/>
    <!-- Assignment -->

    <% if(allclassroom.length === 0){%>
        <h3 style="text-align: center;">Havent't joined any Class yet!!</h3>
    <%}else{%>
    <div style="display: flex; justify-content: space-evenly; ">
        <%for(let i=0;i<allclassroom.length;i++){%>
        <div class="card mb-2 " style="box-shadow:10px 10px rgb(213, 213, 214); width: 30rem;  margin:15px;">
            <img src="https://source.unsplash.com/1200x530/?<%= allclassroom[i].subject %>" class="card-img-top" alt="...">
            <div class="card-body ">
                <h5 class="card-title"><%= allclassroom[i].name %></h5>
                <br>
                <div style="display: flex; justify-content: space-evenly;">
                    <a href="/classroom/<%= allclassroom[i]._id %>" class=" btn btn-dark shadow-none" style="justify-content: center; width: 10rem; font-family: Arial, Helvetica, sans-serif; font-weight: bold;  ">Enter<i class="fab fa-github"></i></a>
                </div>
            </div>
        </div>
        <%} }%>

        


        
        
        


    </div>



    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

</body>

</html>